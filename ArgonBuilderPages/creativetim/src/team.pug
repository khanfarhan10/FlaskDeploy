        script(src="js/plugins/headroom.min.js")
        // Control Center for Argon UI Kit: parallax effects, scripts for the example pages etc
        script(src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE" type="text/javascript")
        script(src="js/argon-design-system.min.js?v=1.0.2" type="text/javascript")
        script.
            function argonScripts() {
                if (document.querySelectorAll('.glide').length) {
                    // Carousel
                    new Glide('.glide', {
                        type: 'carousel',
                        startAt: 0,
                        focusAt: 2,
                        perTouch: 1,
                        perView: 4
                    }).mount();
                }

                if (document.querySelectorAll('.testimonial-glide').length) {
                    // Testimonial Carousel
                    new Glide('.testimonial-glide', {
                        type: 'carousel',
                        startAt: 0,
                        focusAt: 2,
                        perTouch: 1,
                        perView: 4
                    }).mount();
                }

                if (document.querySelectorAll('.map').length) {
                    ArgonKit.initGoogleMaps();
                    ArgonKit.initGoogleMaps2();
                }
            }
            argonScripts();